@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<form method="post">
    @Html.Label("Ürün ID")
    @Html.TextAreaFor(x=> x.ProductID, new {@class = "form-control"})
    <br />
    @Html.Label("Ürün Adı")
    @Html.TextAreaFor(x=> x.ProductName, new {@class = "form-control"})
    <br />
    @Html.Label("Ürün Fiyatı")
    @Html.TextAreaFor(x=> x.ProductPrice, new {@class = "form-control"})
    <br />
    @Html.Label("Ürün Stok Sayısı")
    @Html.TextAreaFor(x=> x.ProductStock, new {@class = "form-control"})
    <br />
    <button class="btn btn-info">Ürünü Güncelle</button>
</form>
